---
import { Dropdown, Button } from 'astro-bootstrap';
import type { DropdownItemType } from 'astro-bootstrap';

import projects from "../../../public/JSON/projects.json";

const items: DropdownItemType[] = projects.map(project => {
  return {
    href: project.short || project.name,
    text: project.name
  }
})

---


<Dropdown>
  <Button variant='' dropdown>Projects</Button>
  <Dropdown.Menu>
    {
      items.map((item) => (
        <Dropdown.Item href={item.href}>{item.text}</Dropdown.Item>
      ))
    }
  </Dropdown.Menu>
</Dropdown>